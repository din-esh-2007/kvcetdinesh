# Burnout Guardian - Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Burnout & Focus Guardian
APP_VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/burnout_guardian

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long-please-update-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ML Models
ISOLATION_FOREST_CONTAMINATION=0.1
STABILITY_WINDOW_DAYS=7

# Risk Thresholds
RISK_THRESHOLD_BUFFER=0.60
RISK_THRESHOLD_REDISTRIBUTE=0.75
RISK_THRESHOLD_ALERT=0.85

# Intervention Parameters
BUFFER_DURATION_MINUTES=45
MAX_DAILY_INTERVENTIONS=3

# Forecasting
FORECAST_HORIZON_DAYS=7
PROPHET_CHANGEPOINT_PRIOR=0.05
LSTM_SEQUENCE_LENGTH=14
LSTM_HIDDEN_SIZE=64

# Computer Vision
CV_ENABLED=True
CV_CAPTURE_INTERVAL_MINUTES=30
DEEPFACE_BACKEND=opencv
DEEPFACE_MODEL=Facenet

# Daily Check-In
CHECKIN_REMINDER_HOUR=9
CHECKIN_WEIGHT_BEHAVIORAL=0.7
CHECKIN_WEIGHT_SELFREPORT=0.3

# Streaming
STREAM_INTERVAL_MINUTES=5
STREAM_BATCH_SIZE=50

# Dataset Generation
DATASET_NUM_EMPLOYEES=200
DATASET_NUM_DAYS=120
DATASET_OUTPUT_PATH=data/synthetic_dataset.csv

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/burnout_guardian.log
